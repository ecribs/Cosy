<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ETQuestion"
        android:background="#ffff33"
        android:paddingBottom="50dp"
        android:layout_below="@+id/TVQuestion"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/NEXT"
        android:background="#5199ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="77dp"
        android:minHeight="100dp"
        android:maxWidth="100dp"
        android:layout_toEndOf="@+id/TVQuestion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Question: "
        android:id="@+id/TVQuestion"
        android:textColor="#ffffff"
        android:layout_marginTop="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TVAnswer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ETAnswer"
        android:background="#ffff33"
        android:layout_below="@+id/TVAnswer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="50dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Answer"
        android:id="@+id/TVAnswer"
        android:textColor="#ffffff"
        android:layout_below="@+id/ETQuestion"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/QSUBMIT"
        android:background="#5199ff"
        android:visibility="invisible"
        android:layout_alignStart="@+id/TVAnswer"
        android:maxWidth="100dp"
        android:minHeight="100dp"
        android:layout_alignTop="@+id/NEXT" />


</RelativeLayout>